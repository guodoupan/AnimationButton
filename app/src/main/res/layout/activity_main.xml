<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <gdp.com.myapplication.AnimationButton
        android:id="@+id/activity_main_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:checkBackgroundColor="@color/checkColor"
        app:unCheckBackgroundColor="@color/unCheckColor"
        app:checkDrawable="@drawable/check"
        app:unCheckDrawable="@drawable/add"
        app:checked="false"/>
</RelativeLayout>
